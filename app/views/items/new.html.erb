<div>
  <header class="inventories_new">
    <h1>NEW ITEM</h1>
    <ul>
      <li><%= link_to "<", inventories_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %></li>
    </ul>
  </header>
  <main>
    <div>
      <div class="container">
        <div>
          <%= form_with(model: @item, url: inventory_items_path(@inventory)) do |form| %>
            <div class="form">
              <div class="name">
                <%= form.label :name %>
                <%= form.text_field :name, placeholder: "Item" %>
              </div>
              <div class="amount">
                <%= form.label :amount %>
                <%= form.number_field :amount, placeholder: "Amount" %>
              </div>
            </div>
        </div>
        <div class="check">
          <% @inventories.each do |inventory| %>
            <div>
              <%= inventory.name %>
              <%= check_box_tag "inventories_ids[]", inventory.id, inventory.id == @inventory.id %>
            </div>
          <% end %>
        </div>
      </div>
      <footer>
        <div class="actions"><%= form.submit "CREATE INTEM" %></div>
      </footer>
      <% end %>
    </div>
  </main>
  
</div>
