<div>
  <header class="inventories">
    <h1>NEW INVENTORY</h1>
    <ul>
      <li><%= link_to "<", inventories_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %></li>
    </ul>
  </header>
  <main>
    <%= form_with model: @inventory do |form| %>
      <div>
        <%= form.label :name %>
        <%= form.text_field :name, placeholder: "Inventory" %>
      </div>
      <div>
        <%= form.label :icon %>
        <%= form.text_field :icon, placeholder: "Link" %>
      </div>
      <footer>
        <div class="actions"><%= form.submit "CREATE INVENTORY" %></div>
      </footer>
    <% end %>
  </main>
</div>
