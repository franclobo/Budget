<div>
  <header class="inventories_show">
    <h1>TRANSACTIONS</h1>
    <ul>
      <li><%= link_to "<", inventories_path %></li>
      <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete } %></li>
    </ul>
  </header>
  <main>
    <div class="items_container">
      <p>Total <%= @inventory.name %>: $<% @sum=0 %>
      <% @items.each do |item| %>
        <% @sum += item.amount %>
      <% end %>
      <%= @sum %></p>
      <div class="items">
        <% @items.each do |item| %>
          <div class="item">
            <div>
              <p><%= item.name %></p>
            </div>
            <div>
              <p>$<%= item.amount %></p>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
  <footer class="index_footer">
    <p><%= link_to "NEW TRANSACTION", new_inventory_item_path(@inventory) %></p>
  </footer>
</div>
